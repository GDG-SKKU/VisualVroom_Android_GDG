<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 1. 설명 텍스트 -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Convert speech to text &amp; sign"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 녹음 UI: concentric circles + progress ring + mic -->
    <FrameLayout
        android:id="@+id/micContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 회색 바깥 원 -->
        <View
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:background="@drawable/circle_outer" />

        <!-- 녹음 진행 표시 링 -->
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/recordProgress"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:indeterminate="true"
            android:layout_gravity="center"
            app:indeterminateTint="@color/purple_300"
            app:indeterminateTintMode="src_in" />

        <!-- 중간 원 -->
        <View
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_middle" />

        <!-- 안쪽 원 -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_inner" />

        <!-- 중앙 마이크 아이콘 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mic"
            android:layout_gravity="center"
            app:tint="@color/white" />
    </FrameLayout>

    <!-- 3. 힌트 텍스트 -->
    <TextView
        android:id="@+id/hintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Recording..."
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/micContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>