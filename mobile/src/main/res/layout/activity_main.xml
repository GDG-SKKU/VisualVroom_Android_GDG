<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ★ 커스텀 헤더: Audio Recorder + Transcribe & Sign 버튼 -->
    <LinearLayout
        android:id="@+id/headerMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1) 탭 대신 텍스트 -->
        <TextView
            android:id="@+id/tvAudioRecorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio Recorder"
            android:textSize="16sp"
            android:textColor="@color/tab_text_color"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true"/>

        <!-- 2) Pill 모양 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTranscribeSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transcribe &amp; Sign"
            android:textSize="16sp"
            android:minWidth="120dp"
            android:paddingHorizontal="30dp"
            android:paddingVertical="8dp"
            app:backgroundTint="@color/tab_btn_bg"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"/>
    </LinearLayout>

    <!-- ViewPager: 최상단 제약을 headerMenu 로 변경 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerMenu"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"/>

    <!-- Bottom 버튼 컨테이너 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

